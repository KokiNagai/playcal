<% if user_signed_in? %>
<div class="chat-wrapper">
  <%= bootstrap_form_for(@chat) do |f| %>
  <%= f.hidden_field :chatbox_id, :value => @chatbox.id %>
  <%= f.hidden_field :user_id, :value => current_user.id %>
  <div class="chat-form-area">
    <p><%= f.text_area :text, id: "chatform", hide_label: true, placeholder: "コメントを入力" %></p>
    <div class="chat-form-submit">
        <%= f.submit "コメント", class: "btn btn-success", id: "chat-form-submit" %>
    </div>
  </div>
  <% end %>
</div>
<% else %>
<div class="chat-form-nonlogin">
  <h2>コメントを書くにはログインが必要です</h2>
  <p id="chat-form-nonlogin1"><%= link_to('ログインはこちらから', new_user_session_path, style: "color: #5f9ea0;") %></p>
  <p id="chat-form-nonlogin2"><%= link_to('新規登録はこちらから', new_user_session_path, style: "color: #5f9ea0;") %></p>
</div>
<% end %>
