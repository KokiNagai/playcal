<% set_meta_tags title: "パスワードの再発行", noindex: true %>
<div class="email-wrapper">
  <div class="side-links-info col-md-3 hidden-xs">
    <%= render "devise/shared/links" %>
  </div>
  <div class="email-sent-wrapper col-md-8">
    <div class="email-sent-main">
      <h2>パスワードの再発行</h2>

      <%= bootstrap_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
        <%= f.hidden_field :reset_password_token %>

        <div class="password-edit">
          <%= f.label :新しいパスワードを入力してください %><br />
          <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %>字以内)</em>
          <% end %><br />
          <%= f.password_field :password, autocomplete: "new-password", id: "email-edit", hide_label: true  %>
        </div>

        <div class="password_confirmation-edit">
          <%= f.label :パスワードの確認 %><br />
          <%= f.password_field :password_confirmation, id: "email-edit", autocomplete: "off", hide_label: true %>
        </div>

        <%= f.submit "送信する", class: "btn btn-success", id: "edit-submit" %>
        <% end %>
      </div>
      </div>
    </div>


    <div class="under-links-info visible-xs">
      <%= render "devise/shared/links" %>
    </div>
