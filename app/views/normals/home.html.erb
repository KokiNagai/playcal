  <script>
  function init() {
    const px_change = 450;
    $('.navbar-fixed-top').addClass('header-scr2');
    $('.logo').css('color', '#fff');
    $('.dropdown-hamberger').css('color', '#fff');
    window.addEventListener('scroll', function(e) {
      if ($(window).scrollTop() > px_change) {
       $('.logo').css('color', '#9cd75b');
       $('.navbar-fixed-top').addClass('header-scr');
       $('.navbar-fixed-top').css('background', 'transparent');
       $('.dropdown-hamberger').css('color', '#4c4c4c');
       $('header').css('box-shadow', '-1px 1px 1px rgba(0,0,0,0.1)');
     } else if ($('.navbar-fixed-top').hasClass('header-scr')) {
       $('.logo').css('color', '#fff');
       $('.navbar-fixed-top').removeClass('header-scr');
       $('.navbar-fixed-top').css('background', '');
       $('.navbar-fixed-top').addClass('header-scr2');
       $('.dropdown-hamberger').css('color', '#fff');
       $('header').css('box-shadow', '');
     }
    })
  }
  window.onload = init();
